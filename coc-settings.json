{
    "languageserver":
    {
        "haskell":
        {
            "command":
                "haskell-language-server-wrapper",

            "args":
                ["--lsp"],

            "rootPatterns":
                ["*.cabal", "hie.yaml", "package.yaml", "stack.yaml"],

            "filetypes":
                ["haskell", "hs", "lhs"]
        }
    },

    "codeLens.enable":
        true,

    "explorer.icon.enableNerdfont":
        true,

    "explorer.buffer.root.template":
        "[icon] >> B",

    "explorer.buffer.child.template":
        "[git | 2] [readonly | modified | 1] [bufnr] [name]",

    "explorer.file.root.template":
        "[icon] >> F [root]",

    "explorer.file.child.template":
        "[git | 2] [readonly | modified | 1] [indent][icon | 1] [filename]",

    "texlab.build.onSave":
        true,

    "Lua.telemetry.enable":
        false
}
